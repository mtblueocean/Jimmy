var flashMessage = function($rootScope) {
  var queue = [];
  var currentMessage = "";


  return {
    message:'',
    icon_font:'',
    bg:'',
    header:'',
    setMessage: function(message) {
      if(message.success){
        this.icon_font = 'font-blue';
        this.bg = 'bg-blue';
        this.header='Success!';
      } else {
        this.icon_font = 'font-red';
        this.bg        = 'bg-red';
        this.header    = 'Oops!';
      }
      this.message = message.message;
    },
